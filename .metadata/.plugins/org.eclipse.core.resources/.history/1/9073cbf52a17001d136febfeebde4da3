package tests.get.requestspec;

import org.testng.Assert;
import org.testng.annotations.BeforeTest;
import org.testng.annotations.DataProvider;
import org.testng.annotations.Test;

import io.restassured.response.Response;
import io.restassured.specification.RequestSpecification;
import testbase.TestBase;
import utilities.ReadExcelFile;

public class TC002_GetASingleProduct {


	Response res;
	ReadExcelFile readFile;
	
	@BeforeTest
	public void setupTest() {
		int idNumber = 4;
		RequestSpecification req = TestBase.setup();
		res = req.get("/products/"+idNumber);
		
	}
	
	@Test(dataProvider="dataForTest")
	public void test() {
		String body = res.getBody().asPrettyString();
		int statusCode = res.getStatusCode();
		System.out.println(statusCode);
		System.out.println(body);
		Assert.assertEquals(statusCode, 200);
	}
	
	@DataProvider
	public String[][] dataForTest() {
		int rowCount = readFile.getRowCount("data.xlsx", "dataForGetSingleProduct");
		System.out.println(rowCount);
		int colCount = readFile.getCellCount("data.xlsx", "dataForGetSingleProduct");
		String[][] data = new String[rowCount][colCount];
		
		for(int x = 1; x < rowCount; x++) {
			for(int y = 0; y < colCount; y++) {
				data[x-1][y] = readFile.getCellData("data.xlsx", "dataForGetSingleProduct", x, y);
			}
		}
		
		return data;
	}
	
	
	

}
